<div class="show-header">
  <%= image_tag("blood.png", class: 'icon-header') %>
  <h3 class="database-headline">Period</h3>
  <h5 class="data-headline" id="period">VIEW ENTRY</h5>
</div>
<br>

<div class="form-container">
  <div class="field-container">
    <div class="label">Start Date</div>
    <div class="field"><%= @menstruation_entry.start_date.strftime("%b %-d, %Y") %></div>
  </div>

  <div class="field-container">
    <div class="label">End Date</div>
    <div class="field"><%= @menstruation_entry.end_date.strftime("%b %-d, %Y") %></div>
  </div>

  <div class="field-container">
    <div class="label">Notes</div>
    <div class="field"><%= @menstruation_entry.notes %></div>
  </div>
  
  <div class="special-button-container">
    <span class="special-button"><%= link_to 'EDIT', edit_user_menstruation_entry_path %></span>
    <span class="special-button"><%= link_to 'DELETE', user_menstruation_entry_path, method: 'delete', class: "delete-link" %></span>
    <span class="special-button"><%= link_to 'NEW', new_user_menstruation_entry_path %></span>
  </div>

</div>

<div class="link-container">
  <div class="link"><%= link_to '&lt; &nbsp; Data'.html_safe, user_menstruation_entries_path %></div>
  <div class="link"><%= link_to '&lt; &lt; &nbsp; Dashboard'.html_safe, dashboard_path %></div>
</div>

<%= render :partial => 'shared/delete_modal' %>