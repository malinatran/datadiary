<div class="form-container">

<%= form_for(@health_entry, url: @form_path) do |f| %>

  <div class="field-container">
    <div class="label"><%= f.label :date %></div>
    <div class="field"><%= f.text_field :date, :class => "datepicker", required:true %></div>
  </div>

  <div class="field-container">
    <div class="label"><%= f.label :emotion %></div>
    <div class="field"><%= f.text_area :emotion, rows: "1", :class => "emotion" %></div>
  </div>

  <div class="field-container">
    <div class="label"><%= f.label :notes %></div>
    <div class="field"><%= f.text_area :notes %></div>
  </div>

  <div class="submit-button"><%= f.submit 'SUBMIT' %></div>

<% end %>

</div>

<p class="external-text">Emoji cheat sheet <a href="http://www.emoji-cheat-sheet.com/">here</a> :point_left: </p>

<div class="link-container">
  <div class="link"><%= link_to '&lt; &nbsp; Data'.html_safe, user_health_entries_path %></div>
  <div class="link"><%= link_to '&lt; &lt; &nbsp; Dashboard'.html_safe, '/dashboard' %></div>
</div>